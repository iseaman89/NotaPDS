<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  xmlns:controls="http://schemas.microsoft.com/dotnet/2021/maui/design"
              xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:BAPDS.Model"
             xmlns:viewmodel="clr-namespace:BAPDS.ViewModel"
             x:DataType="viewmodel:CustomerPageViewModel"
             x:Class="BAPDS.View.CustomerPage"
             Title="Kunde Information">

    <ScrollView>
    <controls:VerticalStackLayout Padding="10">
        <Frame HeightRequest="125">
            <Label Text="{Binding Path=Project.CustomerData.Name,
                   StringFormat='Kunde: {0}'}"/>

        </Frame>
        <Frame HeightRequest="125">
            <Label Text="{Binding Project.FullNumber}"/>

        </Frame>
        <Frame HeightRequest="125">
            <Label Text="{Binding Project.CustomerData.ContactPersonFullName}"/>

        </Frame>
        <Frame HeightRequest="125">
            <Label Text="{Binding Project.CustomerData.ContactPersonTel}"/>

        </Frame>
        <Frame HeightRequest="125">
            <Label Text="{Binding Project.CustomerData.ImportantInformation}"/>

        </Frame>
            <Frame>
                <Label Text="retet"/>

            </Frame>
    </controls:VerticalStackLayout>
    </ScrollView>
</ContentPage>
